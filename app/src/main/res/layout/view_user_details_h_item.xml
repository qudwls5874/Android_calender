<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/user_details_h_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_details_h_date_textView"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2024-05-02"/>

        <TextView
            android:id="@+id/user_details_h_title_textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="네일 (1)"/>

        <TextView
            android:id="@+id/user_details_h_payment_textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="10,000"/>


        <TextView
            android:id="@+id/user_details_h_fg_textView"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/textPlusColor"
            android:text="차감"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/user_details_h_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/view_user_details_d_item"
        tools:itemCount="2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/BackBaseInputBoxColor"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>





</LinearLayout>