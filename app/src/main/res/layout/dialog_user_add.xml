<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_add_top_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_rectangular_shape"
    android:orientation="vertical">

    <!--  최상단  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_add_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/textPlusColor"
            android:textSize="18dp"
            android:text="취소"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/user_add_insert_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/textBeNormalColor"
            android:textSize="18dp"
            android:text="완료"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <!-- 상단 프로필 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="bottom">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_person_image"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"/>

            <android.widget.Button
                android:id="@+id/user_add_profile_btn"
                android:layout_width="60dp"
                android:layout_height="28dp"
                android:background="@drawable/rounded_button"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:text="사진 추가"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"/>

        </LinearLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_border_input_text">

                    <EditText
                        android:id="@+id/user_add_name_edit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="30dp"
                        android:gravity="center"
                        android:background="@android:color/transparent"
                        android:textSize="14dp"
                        android:hint="이름"
                        android:singleLine="true"
                        android:nextFocusDown="@id/user_add_tel_edit"/>

                    <ImageView
                        android:id="@+id/user_add_name_delete"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_cansel_btn"/>

                </LinearLayout>

                <View
                    android:layout_width="40dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_border_input_text">

                    <EditText
                        android:id="@+id/user_add_tel_edit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="30dp"
                        android:gravity="center"
                        android:background="@android:color/transparent"
                        android:textSize="14dp"
                        android:hint="010-1234-1234"
                        android:singleLine="true"/>

                    <ImageView
                        android:id="@+id/user_add_tel_delete"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_cansel_btn"/>

                </LinearLayout>

                <View
                    android:layout_width="40dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_border_input_text">

                    <EditText
                        android:id="@+id/user_add_address_edit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="30dp"
                        android:gravity="center"
                        android:background="@android:color/transparent"
                        android:textSize="14dp"
                        android:hint="주소"
                        android:singleLine="true"/>

                    <ImageView
                        android:id="@+id/user_add_address_delete"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_cansel_btn"/>


                </LinearLayout>

                <View
                    android:layout_width="40dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_border_input_text">

                    <EditText
                        android:id="@+id/user_add_event_edit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="30dp"
                        android:gravity="center"
                        android:background="@android:color/transparent"
                        android:textSize="14dp"
                        android:hint="일정"
                        android:singleLine="true"/>

                    <ImageView
                        android:id="@+id/user_add_event_delete"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_cansel_btn"/>


                </LinearLayout>

                <View
                    android:layout_width="40dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <!-- 구분 선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/BackBaseInputBoxColor"/>

    <!-- 하단 리스트 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/user_add_service_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/view_item_service_row"
                    tools:itemCount="1"/>

                <!-- 서비스 추가 -->
                <LinearLayout
                    android:id="@+id/user_add_service_addBtn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/textNormalColor"
                            android:src="@drawable/ic_list_add"
                            />

                    </LinearLayout>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="13dp"
                        android:textColor="@color/textNormalColor"
                        android:text="서비스"/>


                </LinearLayout>

                <!-- 구분 선 end -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/BackBaseInputBoxColor"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="36dp"/>

                <!-- 구분 선 start -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/BackBaseInputBoxColor"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/user_add_cash_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/view_item_cash_row"
                    tools:itemCount="1"/>

                <!-- 금액충전 추가 -->
                <LinearLayout
                    android:id="@+id/user_add_cash_addBtn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/textNormalColor"
                            android:src="@drawable/ic_list_add"
                            />

                    </LinearLayout>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="13dp"
                        android:textColor="@color/textNormalColor"
                        android:text="금액충전"/>


                </LinearLayout>

                <!-- 구분 선 end -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/BackBaseInputBoxColor"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="36dp"/>

                <!-- 구분 선 start -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/BackBaseInputBoxColor"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/user_add_coupon_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/view_item_coupon_row"
                    tools:itemCount="1"/>

                <!-- 쿠폰 추가 -->
                <LinearLayout
                    android:id="@+id/user_add_coupon_addBtn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/textNormalColor"
                            android:src="@drawable/ic_list_add"
                            />

                    </LinearLayout>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="13dp"
                        android:textColor="@color/textNormalColor"
                        android:text="쿠폰"/>


                </LinearLayout>

                <!-- 구분 선 end -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/BackBaseInputBoxColor"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="36dp"/>

                <!-- 구분 선 start -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/BackBaseInputBoxColor"/>

                <!-- 메모 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/textNormalColor"
                        android:text="메모"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:inputType="textMultiLine"
                        android:gravity="top|start"
                        android:background="@android:color/transparent"

                        />

                </LinearLayout>

                <!-- 구분 선 end -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/BackBaseInputBoxColor"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="36dp"/>

                <!-- 구분 선 start -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/BackBaseInputBoxColor"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/user_add_tel_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/view_item_tel_row"
                    tools:itemCount="1"/>

                <!-- 번호 추가 -->
                <LinearLayout
                    android:id="@+id/user_add_tel_addBtn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/textNormalColor"
                            android:src="@drawable/ic_list_add"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="13dp"
                        android:textColor="@color/textNormalColor"
                        android:text="추가 번호"/>


                </LinearLayout>

                <!-- 구분 선 end -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/BackBaseInputBoxColor"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="36dp"/>

                <!-- 구분 선 start -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/BackBaseInputBoxColor"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/user_add_address_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/view_item_tel_row"
                    tools:itemCount="1"/>

                <!-- 주소 추가 -->
                <LinearLayout
                    android:id="@+id/user_add_address_addBtn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/textNormalColor"
                            android:src="@drawable/ic_list_add"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="13dp"
                        android:textColor="@color/textNormalColor"
                        android:text="추가 주소"/>


                </LinearLayout>

                <!-- 구분 선 end -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/BackBaseInputBoxColor"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="36dp"/>

                <!-- 구분 선 start -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/BackBaseInputBoxColor"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/user_add_event_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/view_item_tel_row"
                    tools:itemCount="1"/>

                <!-- 일정 추가 -->
                <LinearLayout
                    android:id="@+id/user_add_event_addBtn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:textColor="@color/textNormalColor"
                            android:src="@drawable/ic_list_add"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="13dp"
                        android:textColor="@color/textNormalColor"
                        android:text="추가 일정"/>


                </LinearLayout>

                <!-- 구분 선 end -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/BackBaseInputBoxColor"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="36dp"/>





            </LinearLayout>



        </LinearLayout>

    </ScrollView>


</LinearLayout>
