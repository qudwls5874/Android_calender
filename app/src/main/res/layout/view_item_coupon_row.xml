<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/user_add_coupon_addBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/view_coupon_imageView"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_user_delete"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/view_coupon_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:textSize="13dp"
            android:textColor="@color/textNormalColor"
            android:background="@android:color/transparent"
            android:hint="쿠폰"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/BackBaseInputBoxColor"/>

                <TextView
                    android:id="@+id/view_coupon_date_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="13dp"
                    android:textColor="@color/textNormalColor"
                    android:background="@android:color/transparent"
                    android:text="20204.04.06"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/BackBaseInputBoxColor"/>

                <TextView
                    android:id="@+id/view_coupon_textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:layout_marginLeft="10dp"
                    android:textSize="13dp"
                    android:textColor="@color/textNormalColor"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:hint="0"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/BackBaseInputBoxColor"/>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>