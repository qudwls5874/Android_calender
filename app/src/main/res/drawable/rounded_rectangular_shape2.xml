<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="@color/BackBaseColor" /> <!-- 흰색 배경 -->
    <corners
        android:topLeftRadius="8dp"
        android:topRightRadius="8dp"
        android:bottomLeftRadius="8dp"
        android:bottomRightRadius="8dp"/> <!-- 8dp의 라운드 코너 -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" /> <!-- 2dp의 안쪽 간격 -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- 외곽선 -->
</shape>
