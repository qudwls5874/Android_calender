<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DatePickerDialogStyle" parent="android:Theme.Material.Light.Dialog">
        <item name="colorAccent">@color/TextCol5</item>
        <item name="android:headerBackground">@color/BgCol3</item>
        <item name="android:dayOfWeekBackground">@color/BgCol1</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/TextCol5</item>
        <item name="android:textColorPrimary">@color/TextCol2</item>
        <item name="android:windowMinWidthMajor">@dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_min_width_minor</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
    </style>

    <style name="AnimationPopupStyle">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <!-- 토요일과 일요일을 스타일링하는 스타일 -->
    <style name="WeekendTextStyle">
        <item name="android:textColor">#FF0000</item> <!-- 텍스트 색상을 빨간색으로 지정 -->
    </style>

</resources>